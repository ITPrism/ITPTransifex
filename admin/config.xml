<?xml version="1.0" encoding="utf-8"?>
<config>

    <fieldset name="transifex" label="COM_ITPTRANSIFEX_SERVER" description="COM_ITPTRANSIFEX_SERVER_PARAMS">
        <field name="username" type="text" size="50" label="COM_ITPTRANSIFEX_USERNAME" description="COM_ITPTRANSIFEX_USERNAME_DESC" />
        <field name="password" type="password" size="50" label="COM_ITPTRANSIFEX_PASSWORD" description="COM_ITPTRANSIFEX_PASSWORD_DESC" />
        <field name="api_url" type="text" default="https://www.transifex.com/api/2/" size="50" label="COM_ITPTRANSIFEX_API_URL" description="COM_ITPTRANSIFEX_API_URL_DESC" />
    </fieldset>
    
    <fieldset name="manifest" label="COM_ITPTRANSIFEX_PACKAGE" description="COM_ITPTRANSIFEX_PACKAGE_PARAMS">
        <field name="author" type="text" class="span6" label="COM_ITPTRANSIFEX_AUTHOR" description="COM_ITPTRANSIFEX_AUTHOR_DESC" />
        <field name="author_email" type="text" class="span6" label="COM_ITPTRANSIFEX_AUTHOR_EMAIL" description="COM_ITPTRANSIFEX_AUTHOR_EMAIL_DESC" />
        <field name="copyright" type="text" class="span6" label="COM_ITPTRANSIFEX_COPYRIGHT" description="COM_ITPTRANSIFEX_COPYRIGHT_DESC" />
        <field name="site" type="text" class="span6" label="COM_ITPTRANSIFEX_SITE" description="COM_ITPTRANSIFEX_SITE_DESC" />
        <field name="include_lang_name" type="radio" default="1" label="COM_CROWDFUNDING_INCLUDE_LANG_NAME" description="COM_CROWDFUNDING_INCLUDE_LANG_NAME_DESC" class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    
</config>