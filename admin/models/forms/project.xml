<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="name" type="text" class="input-xxlarge"
               label="COM_ITPTRANSIFEX_NAME"
               description="COM_ITPTRANSIFEX_PROJECT_NAME_DESC"
               filter="trim"
               required="true"
               hint="Crowdfunding Platform"
               />

        <field name="alias" type="text" class="input-xxlarge"
               label="COM_ITPTRANSIFEX_SLUG"
               description="COM_ITPTRANSIFEX_PROJECT_SLUG_DESC"
               required="true"
               hint="crowdfunding-platform"
               />

        <field name="filename" type="text" class="input-xxlarge"
               label="COM_ITPTRANSIFEX_FILENAME"
               description="COM_ITPTRANSIFEX_PROJECT_FILENAME_DESC"
               size="40"
               hint="UNZIPFIRST_Crowdfunding"
               />

        <field name="id" type="text"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               default="0"
               readonly="true"
               />

        <field name="description" type="textarea"  class="input-xxlarge"
               label="COM_ITPTRANSIFEX_DESCRIPTION"
               description="COM_ITPTRANSIFEX_PROJECT_DESCRIPTION_DESC"
               rows="10"
               />

        <field name="image" type="file"
               label="COM_ITPTRANSIFEX_IMAGE"
               description="COM_ITPTRANSIFEX_PROJECT_IMAGE_DESC"
                />

        <field name="link" type="text" class="input-xxlarge"
               label="COM_ITPTRANSIFEX_LINK"
               description="COM_ITPTRANSIFEX_LINK_DESC"
               hint="https://opentranslators.transifex.com/opentranslators/crowdfunding/"
               />

        <field name="published" type="radio" class="btn-group"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               filter="intval"
               default="1"
                >
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

    </fieldset>
</form>