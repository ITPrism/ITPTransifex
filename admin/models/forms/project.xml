            description="COM_ITPTRANSIFEX_PROJECT_NAME_DESC" 
			filter="trim" 
			required="true" />

        <field name="alias" type="text"
	        label="COM_ITPTRANSIFEX_SLUG"
	        description="COM_ITPTRANSIFEX_PROJECT_SLUG_DESC"
            required="true"
        />
        
        <field name="filename" type="text"
	        label="COM_ITPTRANSIFEX_FILENAME"
	        description="COM_ITPTRANSIFEX_PROJECT_FILENAME_DESC"
	        size="40"
        />
		
		<field name="id" type="text" 
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="0"  
            readonly="true" 
        />

        <field name="description" type="textarea" class="span6"
            label="COM_ITPTRANSIFEX_DESCRIPTION" 
            description="COM_ITPTRANSIFEX_PROJECT_DESCRIPTION_DESC"
