<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_ITPTRANSIFEX_VIEW_PROJECTS">
        <message>
            <![CDATA[COM_ITPTRANSIFEX_VIEW_PROJECTS_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <!-- Basic options. -->
        <fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">
            <field name="layout" type="list" default="grid" label="COM_ITPTRANSIFEX_LAYOUT" description="COM_ITPTRANSIFEX_LAYOUT_DESC">
                <option value="grid">COM_ITPTRANSIFEX_GRID</option>
                <option value="list">COM_ITPTRANSIFEX_LIST</option>
            </field>
            <field name="items_row" type="text" default="4" label="COM_ITPTRANSIFEX_ITEMS_ROW" description="COM_ITPTRANSIFEX_ITEMS_ROW_DESC" />
            <field name="items_limit" type="text" default="20" label="COM_ITPTRANSIFEX_ITEMS_LIMIT" description="COM_ITPTRANSIFEX_ITEMS_LIMIT_DESC" />
            <field name="items_order" type="list" default="name" label="COM_ITPTRANSIFEX_ITEMS_ORDER" description="COM_ITPTRANSIFEX_ITEMS_ORDER_DESC">
                <option value="ordering">COM_ITPTRANSIFEX_ORDERING</option>
                <option value="name">COM_ITPTRANSIFEX_NAME</option>
            </field>
            <field name="items_order_direction" type="list" default="asc" label="COM_ITPTRANSIFEX_ITEMS_ORDER_DIRECTION" description="COM_ITPTRANSIFEX_ITEMS_ORDER_DIRECTION_DESC">
                <option value="asc">COM_ITPTRANSIFEX_ASCENDING</option>
                <option value="desc">COM_ITPTRANSIFEX_DESCENDING</option>
            </field>
            <field name="display_description" type="radio" default="1" label="COM_ITPTRANSIFEX_DISPLAY_DESCRIPTION" description="COM_ITPTRANSIFEX_DISPLAY_DESCRIPTION_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="description_length" type="text" default="255" label="COM_ITPTRANSIFEX_DESCRIPTION_LENGTH" description="COM_ITPTRANSIFEX_DESCRIPTION_LENGTH_DESC" />
        </fieldset>
    </fields>
</metadata>